<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<%= form_with url: tasks_path, method: :get, scope: :task, local: true do |form| %>
  <div>
    <%= t("activerecord.attributes.task.title") %>:
    <%= form.text_field :title %>
    <%= t("activerecord.attributes.task.status") %>:
    <%= form.select :status, Task.statuses.keys,{prompt: "---"} %>
    <%= form.submit "検索" %>
  </div>
<% end %>

<table>
  <thead>
    <tr>
      <th><%= t("activerecord.attributes.task.title") %></th>
      <th><%= t("activerecord.attributes.task.content") %></th>
      <th><%= t("activerecord.attributes.task.status") %></th>
      <th><%= t("activerecord.attributes.task.priority") %></th>
      <th><%= t("view.created_at") %></th>
      <th><%= t("activerecord.attributes.task.expired_at") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td class="task_row"><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.status %></td>
        <td><%= task.priority %></td>
        <td><%= l task.created_at, format: :short %></td>
        <td><%= l task.expired_at, format: :short %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div>
  <%= link_to 'New Task', new_task_path %>
  <%= link_to "終了期限でソート", tasks_path(sort_expired: "true") %>
  <%= link_to "優先度高い順", tasks_path(sort_priority: "true") %>
  <%= link_to "ソート解除", tasks_path %>
</div>

<div>
  <%= paginate @tasks %>
</div>
